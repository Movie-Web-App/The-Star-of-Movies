<main>
    <script>
        if (document.cookie
            .split('; ')
            .find(row => row.startsWith('sid=')) == null) {

            window.location.replace("/")

        }

    </script>

    <% if (typeof movies !="undefined" ) { %>


        <div class="container-for-films">

            <% movies.forEach(movie=> { %>

                <div class="favorite-list-div">

                    <img src="<%= movie.image %>" alt="poster">
                    <h2>
                        <%= movie.title %>
                    </h2>
                    <h4>
                        <%= movie.year %>
                    </h4>
                    <% if (+movie.imdb_rate/2===5) { %>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <% } %>
                            <% if (+movie.imdb_rate/2 < 5 && +movie.imdb_rate/2>= 4.5){ %>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span><i class="fas fa-star-half"></i></span>
                                <% } %>
                                    <% if (+movie.imdb_rate/2 < 4.5 && +movie.imdb_rate/2>= 4) { %>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <% } %>
                                            <% if (+movie.imdb_rate/2 < 4 && +movie.imdb_rate/2>= 3.5) { %>
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star checked"></span>
                                                <span><i class="fas fa-star-half"></i></span>
                                                <% } %>
                                                    <% if (+movie.imdb_rate/2 < 3.5 && +movie.imdb_rate/2>= 3) { %>
                                                        <span class="fa fa-star checked"></span>
                                                        <span class="fa fa-star checked"></span>
                                                        <span class="fa fa-star checked"></span>
                                                        <% } %>
                                                            <% if (+movie.imdb_rate/2 < 3 && +movie.imdb_rate/2>=
                                                                2.5) {
                                                                %>
                                                                <span class="fa fa-star checked"></span>
                                                                <span class="fa fa-star checked"></span>
                                                                <span><i class="fas fa-star-half"></i></span>
                                                                <% } %>
                                                                    <% if (+movie.imdb_rate/2 < 2.5 &&
                                                                        +movie.imdb_rate/2>=
                                                                        2 ) { %> = 2) { %>
                                                                        <span class="fa fa-star checked"></span>
                                                                        <span class="fa fa-star checked"></span>
                                                                        <% } %>
                                                                            <% if (+movie.imdb_rate/2 < 2 &&
                                                                                +movie.imdb_rate/2>= 1.5) { %>
                                                                                <span class="fa fa-star checked"></span>
                                                                                <span><i
                                                                                        class="fas fa-star-half"></i></span>
                                                                                <% } %>
                                                                                    <% if (+movie.imdb_rate/2 < 1.5 &&
                                                                                        +movie.imdb_rate/2>= 1) {
                                                                                        %>
                                                                                        <span
                                                                                            class="fa fa-star checked"></span>
                                                                                        <% } %>
                                                                                            <% if (+movie.imdb_rate/2 <
                                                                                                1) { %>
                                                                                                <span><i
                                                                                                        class="fas fa-star-half"></i></span>
                                                                                                <% } %>
                                                                                                    <div
                                                                                                        class="form-buttons">
                                                                                                        <form
                                                                                                            action="/moviedetails/<%= movie.id %>"
                                                                                                            method="GET">
                                                                                                            <br>
                                                                                                            <a href="/details?id=<%= movie.id %>"
                                                                                                                id="info"
                                                                                                                class="tooltip"><i
                                                                                                                    class="fas fa-info"></i>
                                                                                                                <span
                                                                                                                    class="tooltiptext">More
                                                                                                                    Details</span></a>
                                                                                                        </form>
                                                                                                        <br>
                                                                                                        <br>
                                                                                                        <form
                                                                                                            action="/FavoriteList?_method=delete"
                                                                                                            method="POST">

                                                                                                            <input
                                                                                                                type="hidden"
                                                                                                                name="imdb_id"
                                                                                                                value="<%= movie.imdb_id %>">
                                                                                                            <input
                                                                                                                type="hidden"
                                                                                                                name="user_id"
                                                                                                                id="user_id"
                                                                                                                value="<%= user_id %>">
                                                                                                            <input
                                                                                                                type="submit"
                                                                                                                value="Delete Favorite "
                                                                                                                class="delete-favorite-item">
                                                                                                        </form>
                                                                                                    </div>
                </div>
                <% }); %>
        </div>


        <% } %>
</main>