
    <main>
        <div class="container-for-films">
        <% movies.forEach(movie => {  %>
            <div class="favorite-list-div">
                <img src="<%= movie.image %>" alt="poster">
                <h2><%= movie.title %></h2>
                <h4><%= movie.year %> </h4> 
               <h4><% movie.imDbRating %> </h4>
                <div class="form-buttons">
                    <form action="/moviedetails/<%= movie.id %>" method="GET">
                        <br>
                        <a href="/details?id=<%= movie.id %>" id="info" class="tooltip"><i class="fas fa-info"></i> <span class="tooltiptext">More Details</span></a>
                    </form> 
                    <br>
                    <br>
                </div>
         
            </div>
        <%  }); %>
        </div>
        <form action="/" method="get" id="load-form">
         <input type="hidden" value="10" style="display:none" name="pagination">
         <input type="submit" value="Load More" id="testbutton">
         <br>
         <br>
         <br>
        </form>
    </main>

    
        
            
            
           
           
          
   